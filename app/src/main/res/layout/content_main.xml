<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background_textture_2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".views.MainActivity">

    <TextView
            android:id="@+id/mainDate"
            android:textColor="@color/colorWhite"
            android:textSize="10pt"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="@string/selecionar_usuario"
            android:layout_width="match_parent"
            android:background="@drawable/background_consult_top"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>

    <Spinner
            android:backgroundTint="@color/colorWhite"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/spinnerMain"
            android:background="@drawable/background_consult_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="  Publicações"
                android:textSize="10pt"
                android:background="@drawable/main_esquerda"
                android:layout_weight="2"
                android:layout_width="0pt"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/publicacoes"
                android:textSize="10pt"
                android:textColor="@color/colorOrange1"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="0pt"
                android:background="@drawable/main_direita"
                android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text=" Vídeos"
                android:textSize="10pt"

                android:background="@drawable/main_esquerda"
                android:layout_weight="2"
                android:layout_width="0pt"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/videos"
                android:textSize="10pt"
                android:textColor="@color/colorOrange1"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="0pt"
                android:background="@drawable/main_direita"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text=" Horas"
                android:textSize="10pt"

                android:background="@drawable/main_esquerda"
                android:layout_weight="2"
                android:layout_width="0pt"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/horas"
                android:textSize="10pt"
                android:textColor="@color/colorOrange1"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/main_direita"
                android:layout_width="0pt"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text=" Revisitas"
                android:textSize="10pt"

                android:background="@drawable/main_esquerda"
                android:layout_weight="2"
                android:layout_width="0pt"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/revisitas"
                android:textSize="10pt"
                android:textColor="@color/colorOrange1"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="0pt"
                android:background="@drawable/main_direita"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text=" Estudos"
                android:textSize="10pt"

                android:background="@drawable/main_esquerda"
                android:layout_weight="2"
                android:layout_width="0pt"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/estudos"
                android:textSize="10pt"
                android:textColor="@color/colorOrange1"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="0pt"
                android:background="@drawable/main_direita"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>