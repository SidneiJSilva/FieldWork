<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_insert"
        tools:context=".views.InsertActivity">

    <EditText
            android:id="@+id/insertNome"
            android:hint="Nome"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/insertDia"
                android:hint="Dia"
                android:inputType="number"
                android:layout_width="0pt"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/insertMes"
                android:hint="Mes"
                android:inputType="number"
                android:layout_width="0pt"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/insertAno"
                android:hint="Ano"
                android:inputType="number"
                android:layout_width="0pt"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <EditText
            android:id="@+id/insertPublicacoes"
            android:hint="Publicações"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/insertVideos"
            android:hint="Videos"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/insertHoras"
            android:hint="Horas"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/insertRevisitas"
            android:hint="Revisitas"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/insertEstudos"
            android:hint="Estudos"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/salvar"
            android:text="salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/textoConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/botaoConsulta"
            android:text="Consultar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>